@model IEnumerable<ChangeManagementApp.BusinessEntities.Entities.Ticket>

@{
    ViewData["Title"] = "Index change tickets";
}

<h4>Change tickets</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Type
            </th>
            <th>
                Status
            </th>
            <th>
                Assignee
            </th>
            <th>
                Priority
            </th>
            <th>
                CreateDate
            </th>
            <th>
                DueDate
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr *ngFor="let ticket of tickets" routerLink="/tickets/{{ticket.id}}/edit">
            <td>{{ticket.id}}</td>
            <td>{{ticket.name}}</td>
            <td>{{ticket.description}}</td>
            <td>{{ticket.type}}</td>
            <td>{{ticket.status}}</td>
            <td>{{ticket.assignee}}</td>
            <td>{{ticket.priority}}</td>
            <td>{{ticket.createDate}}</td>
            <td>{{ticket.dueDate}}</td>
            <td>{{ticket.location}}</td>
        </tr>
    </tbody>
</table>