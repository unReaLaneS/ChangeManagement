@model ChangeManagementApp.BusinessEntities.Entities.Ticket

@{
    ViewData["Title"] = "Create change ticket";
}

@*<h2>Create</h2>*@

<form class="col-sm-6 col-sm-offset-3" (ngSubmit)="onSubmit()">
    <div class="form-horizontal">
        <h4>Create ticket</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Ticket Type</label>
            <div class="col-md-10">
                <select class="form-control" [(ngModel)]="ticket.type" name="type">
                    <option *ngFor="let type of types" [ngValue]="type.type">{{type.type}}</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" [(ngModel)]="ticket.name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" [(ngModel)]="ticket.description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" [(ngModel)]="ticket.location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}