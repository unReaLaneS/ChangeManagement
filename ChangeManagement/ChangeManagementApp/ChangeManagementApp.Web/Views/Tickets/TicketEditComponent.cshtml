@model ChangeManagementApp.BusinessEntities.Entities.Ticket

@{
    ViewData["Title"] = "Edit change ticket";
}

@*<h2>Create</h2>*@

<form class="col-sm-6 col-sm-offset-3" (ngSubmit)="onUpdate()">
    <div class="form-horizontal">
        <h4>Edit ticket</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Type</label>
            <div class="col-md-10">
                <select class="form-control" [(ngModel)]="ticket.type" name="type">
                    <option *ngFor="let type of types" [ngValue]="type.type">{{type.type}}</option>
                </select>
                </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" [(ngModel)]="ticket.name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" [(ngModel)]="ticket.description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" [(ngModel)]="ticket.location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control" [(ngModel)]="ticket.status" name="status">
                    <option *ngFor="let status of statuses" [ngValue]="status.status">{{status.status}}</option>
                </select>                
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.Username" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.Username" class="form-control" [(ngModel)]="ticket.assignee" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control" [(ngModel)]="ticket.priority" name="priority">
                    <option *ngFor="let priority of priorities" [ngValue]="priority.priority">{{priority.priority}}</option>
                </select>               
            </div>
        </div>
